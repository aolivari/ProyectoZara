{
  "env": {
    "browser": true, // Define variables for browser environments
    "es2021": true // Enable ES2021 globals
  },
  "extends": [
    "next/core-web-vitals" // Use recommended ESLint rules
  ],
  "parserOptions": {
    "ecmaVersion": 12, // Use ECMAScript 2021 syntax
    "sourceType": "module" // Enable ES modules
  },
  "rules": {
    "semi": ["error", "always"], // Enforce semicolons
    "quotes": ["error", "double"], // Enforce double quotes
    "indent": ["error", 2], // Enforce 2-space indentation
    "no-unused-vars": ["warn"], // Warn about unused variables
    "eqeqeq": ["error", "always"], // Enforce strict equality
    "no-console": ["error"], // Warn about console statements
    "curly": ["error", "all"] // Require curly braces (i.e., { }) for all control statements
  }
}
